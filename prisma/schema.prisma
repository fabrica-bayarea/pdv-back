//Model das entidades

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}
model Usuario {
  id Int @id @default(autoincrement())
  nome String
  email String @unique
  senha String
  data_criacao DateTime @default(now())
}
model Cliente {
  id Int @id @default(autoincrement())
  nome String
  email String @unique
  endereco String
  cpf String
  telefone String
  data_nascimento DateTime
  data_criacao DateTime @default(now())
}

model Fornecedor {
  id           Int      @id @default(autoincrement())
  nome         String
  cnpj         String   @unique
  email        String   @unique
  telefone     String
  endereco      String
  data_nascimento DateTime
  produtos     Produto[] 
  data_criacao DateTime  @default(now())
}


model Categoria {
  id        Int       @id @default(autoincrement())
  nome      String
  data_criacao DateTime @default(now())
  produtos  Produto[]
}

model Produto {
  id                   Int       @id @default(autoincrement())
  nome                 String
  marca                String
  descricao            String
  id_fornecedor        Int       
  codigo_produto       String    @unique
  id_categoria         Int
  unidade_medida       String
  preco                Float
  estoque_atual        Float     
  categoria            Categoria  @relation(fields: [id_categoria], references: [id])
  fornecedor           Fornecedor @relation(fields: [id_fornecedor], references: [id])
  data_criacao         DateTime  @default(now())
  sub_produtos         SubProduto[] @relation("SubProduto")
  produtos             SubProduto[] @relation("Produto")
  ativo                Boolean   @default(true)
}

model SubProduto{
  id                   Int       @id @default(autoincrement())
  id_sub_produto       Int
  sub_produto          Produto   @relation(name: "SubProduto",fields: [id_sub_produto], references: [id])
  produto              Produto   @relation(name: "Produto",fields: [id_produto], references: [id])
  id_produto           Int
  quantidade           Float  
}

model Estoque{
  id                   Int       @id @default(autoincrement())
  data_hora_entrada    DateTime @default(now())
  data_hora_saida      DateTime
  id_produto           Int
}
