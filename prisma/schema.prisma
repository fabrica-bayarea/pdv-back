//Model das entidades

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}
model Usuario {
  id Int @id @default(autoincrement())
  nome String
  email String @unique
  senha String
  data_criacao DateTime @default(now())
}
model Cliente {
  id Int @id @default(autoincrement())
  cpf String
  email String @unique
  nome String
  telefone String
  endereco String
  data_nascimento DateTime
  data_criacao DateTime @default(now())
}

model Fornecedor {
  id                 Int      @id @default(autoincrement())
  nome_fantasia      String
  cnpj               String   @unique
  tipo_pessoa        String
  inscricao_estadual String
  razao_social       String
  data_registro      DateTime
  produtos           Produto[] 
  data_criacao       DateTime  @default(now())
}


model Categoria {
  id        Int       @id @default(autoincrement())
  nome      String
  data_criacao DateTime @default(now())
  produtos  Produto[]
}

model Produto {
  id                   Int       @id @default(autoincrement())
  nome                 String
  marca                String
  descricao            String
  id_fornecedor        Int       
  codigo_produto       String    @unique
  id_categoria         Int
  unidade_medida       String
  preco                Float
  estoque_atual        Float     
  categoria            Categoria  @relation(fields: [id_categoria], references: [id])
  fornecedor           Fornecedor @relation(fields: [id_fornecedor], references: [id])
  data_criacao         DateTime  @default(now())
}



model Vendedor {
  id             Int      @id @default(autoincrement())
  cpf            String   @unique
  email          String   @unique
  nome           String
  telefone       String?
  endereco       String?
  dataNascimento DateTime 

}

model NotaFiscal {
  id             Int      @id @default(autoincrement())
  tipoDeNota     String
  modelo         String  
  fornecedorId   Int
  dataEntrada    DateTime @default(now())
  numeroDaNota   String
  dataEmissao    DateTime @default(now())
}

model ContagemMensal {
  id             Int      @id @default(autoincrement())
  nome           String
  cpf            String   @unique
  email          String   @unique
  telefone       String?
  endereco       String?
  dataNascimento DateTime 

}

model NotaFiscalEntrada {
  id             Int      @id @default(autoincrement())
  nome           String
  cpf            String   @unique
  email          String   @unique
  telefone       String?
  endereco       String?
  dataNascimento DateTime 
}

model ProdutoSolicitacao {
  id                  Int @id @default(autoincrement())
  solicitacaoCompraId Int
  codigo_produto      String
  quantidade          Int
  controle            String?
  descricao           String?
}

model RegistroProduto {
  id               Int      @id @default(autoincrement())
  nome             String
  descricaoProduto String
  marca            String
  unidadeMedida    String
  estoqueAtual     String
  preco            Float
  fornecedor       String
  codigoProduto    String
  dataCadastro     DateTime

}

model SolicitacaoCompra {
  id         Int @id @default(autoincrement())
  clienteId  Int
  vendedorId Int
  ativo      Boolean
  observacao  String?
}

model Role {
  id   Int    @id @default(autoincrement())
  nome String

}


model Item {
  id            Int       @id @default(autoincrement())
  codigoProduto String    @unique
  nomeProduto   String
  unidadeMedida String
  valorUnitario Float
  grupoItem     String
  grupoDespesa  String
  despesa       String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model FichaTecnica {
  id             Int      @id @default(autoincrement())
  codigoProduto String   @unique
  nomeProduto   String
  unidadeMedida String
  valorUnitario Float
  quantidade    Int
  totalUnitario Float

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


model Finalizador {
  id            Int       @id @default(autoincrement())
  codigo        String
  nome          String
  situacao      String
  grupoReceita  String
  bandeira      String
  data_criacao         DateTime  @default(now())
}